type Author {
    id: ID!
    name: String!
    books: [Book!]!
}

type Book {
    id: ID!
    title: String!
    year: Int!
    author: Author!
}

type Query {
    books: [Book!]!
}

input NewBook {
  title: String!
  year: Int!
  authorId: String!
}

type Mutation {
  createBook(input: NewBook!): Book!
}